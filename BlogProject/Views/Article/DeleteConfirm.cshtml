@model BlogProject.Models.Article

@{
    ViewBag.Title = "DeleteConfirm";
}


    <div id="containershow">
        <nav>
            <a class="navlink" href="/Article/Show/@Model.ArticleId">Cancel</a>
        </nav>
        <h2>Are you sure you want to delete @Model.ArticleTitle?</h2>
        <p>This action cannot be undone.</p>
        <form method="POST" action="/Article/Delete/@Model.ArticleId">
            <button class="delbutton">
                Confirm Delete
            </button>
        </form>
    </div>



