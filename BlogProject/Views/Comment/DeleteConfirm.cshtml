@model BlogProject.Models.Comment

@{
    ViewBag.Title = "DeleteConfirm";
}


    <div id="containershow">
        <nav>
            <a class="navlink" href="/Comment/Show/@Model.CommentId">Cancel</a>
        </nav>
        <h2>Are you sure you want to delete this comment?</h2>
        <p>@Model.CommentDesc</p>
        <p>This action cannot be undone.</p>
        <form method="POST" action="/Comment/Delete/@Model.CommentId">
            <button class="delbutton">
                Confirm Delete
            </button>
        </form>
    </div>



